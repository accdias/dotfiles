# ~/git/dotfiles/gitconfig
# vim: ft=dosini
[user]
name = Antonio Dias
email = accdias@gmail.com

[core]
autocrlf = input
editor = vim
whitespace = trailing-space,space-before-tab,indent-with-non-tab
pager = delta

[color]
ui = true

[push]
default = matching

[alias]
co = checkout
cm = commit -m
stall = stash --all

[merge]
tool = vimdiff

[init]
defaultBranch = main

[credential]
helper = /usr/lib/git-core/git-credential-libsecret

[column]
ui = auto

[branch]
sort = -committerdate
