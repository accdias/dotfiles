# ~/git/dotfiles/gitconfig
# vim: ft=dosini
[user]
name = Antonio Dias
email = accdias@gmail.com

[core]
autocrlf = input
editor = vim
whitespace = trailing-space,space-before-tab,indent-with-non-tab
#pager = delta

[color]
ui = true

[push]
default = matching

[alias]
co = checkout
com = checkout main
cm = commit -m
stall = stash --all
pr = pull --rebase
adog = log --all --decorate --oneline --graph
l1 = log --oneline

[merge]
tool = vimdiff
conflictstyle = diff3

[init]
defaultBranch = main

[credential]
helper = /usr/lib/git-core/git-credential-libsecret

[column]
ui = auto

[branch]
sort = -committerdate

[rerere]
enabled = true

[diff]
algorithm = histogram
